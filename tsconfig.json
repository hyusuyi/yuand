{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "*": ["./*"],
      "@/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "es",
    "lib",
    "**/__tests__",
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/test",
    "vitest.setup.ts",
    "vitest.config.ts"
  ]
}
